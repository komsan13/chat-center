generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  avatar    String?
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Product {
  id         String      @id @default(cuid())
  name       String
  category   String
  price      Float
  stock      Int         @default(0)
  image      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  orderItems OrderItem[]
}

model Order {
  id        String      @id @default(cuid())
  orderNo   String      @unique
  userId    String
  amount    Float
  status    String      @default("Pending")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  customer  User        @relation(fields: [userId], references: [id])
  items     OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float
  product   Product @relation(fields: [productId], references: [id])
  order     Order   @relation(fields: [orderId], references: [id])
}

model Revenue {
  id        String   @id @default(cuid())
  date      DateTime
  revenue   Float
  profit    Float
  createdAt DateTime @default(now())
}

model DailySales {
  id        String   @id @default(cuid())
  date      DateTime
  dayName   String
  sales     Float
  orders    Int
  createdAt DateTime @default(now())
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  color       String   @default("#22c55e")
  permissions String   @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Website {
  id        String   @id @default(cuid())
  name      String
  url       String   @unique
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Bank {
  id            String   @id @default(cuid())
  type          String   @default("deposit")
  bankName      String
  accountName   String
  accountNumber String   @unique
  status        String   @default("active")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Employee {
  id            String   @id @default(cuid())
  fullName      String
  position      String   @default("")
  websites      String
  bankName      String
  accountNumber String
  status        String   @default("active")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model LineToken {
  id            String    @id @default(cuid())
  name          String
  channelId     String
  channelSecret String
  accessToken   String
  websiteId     String?
  websiteName   String?
  status        String    @default("active")
  lastUsed      DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model QuickReply {
  id            String   @id @default(cuid())
  lineTokenId   String
  title         String
  label         String
  icon          String   @default("ðŸ’¬")
  emojis        String?
  isFavorite    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Financial Tables
model Expenses {
  id            String   @id @default(cuid())
  date          String
  websiteId     String?
  websiteName   String?
  category      String
  description   String?
  amount        Float
  note          String?
  createdBy     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Salaries {
  id            String   @id @default(cuid())
  employeeId    String
  employeeName  String
  position      String?
  websites      String?
  baseSalary    Float    @default(0)
  bonus         Float    @default(0)
  deductions    Float    @default(0)
  netSalary     Float    @default(0)
  paymentDate   String
  status        String   @default("pending")
  note          String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model SalaryBase {
  id            String   @id @default(cuid())
  position      String   @unique
  baseSalary    Float    @default(0)
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Transfer {
  id            String   @id @default(cuid())
  date          String
  websiteId     String?
  websiteName   String?
  fromBankId    String?
  fromBankName  String?
  toBankId      String?
  toBankName    String?
  amount        Float
  fee           Float    @default(0)
  note          String?
  createdBy     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model CashWithdrawal {
  id            String   @id @default(cuid())
  date          String
  websiteId     String?
  websiteName   String?
  bankId        String?
  bankName      String?
  amount        Float
  fee           Float    @default(0)
  note          String?
  createdBy     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model DailyBalance {
  id            String   @id @default(cuid())
  date          String
  bankId        String
  bankName      String
  openingBalance Float   @default(0)
  closingBalance Float   @default(0)
  deposits      Float    @default(0)
  withdrawals   Float    @default(0)
  note          String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model DailySummary {
  id              String   @id @default(cuid())
  date            String
  websiteId       String?
  websiteName     String?
  totalDeposit    Float    @default(0)
  totalWithdrawal Float    @default(0)
  totalProfit     Float    @default(0)
  memberCount     Int      @default(0)
  newMemberCount  Int      @default(0)
  note            String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// LINE Chat Tables
model LineChatRoom {
  id            String   @id @default(cuid())
  lineUserId    String
  lineTokenId   String?
  displayName   String
  pictureUrl    String?
  statusMessage String?
  lastMessage   String?
  lastMessageAt DateTime?
  unreadCount   Int      @default(0)
  isPinned      Boolean  @default(false)
  isMuted       Boolean  @default(false)
  tags          String   @default("[]")
  status        String   @default("active")
  assignedTo    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model LineChatMessage {
  id            String   @id @default(cuid())
  roomId        String
  lineMessageId String?
  messageType   String   @default("text")
  content       String?
  mediaUrl      String?
  stickerId     String?
  packageId     String?
  stickerPackageId String?
  emojis        String?
  sender        String   @default("user")
  senderName    String?
  status        String   @default("sent")
  replyToId     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ChatNote {
  id            String   @id @default(cuid())
  roomId        String
  content       String
  createdBy     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
